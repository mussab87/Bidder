@model Bidder.Data.Entities.Permission
@inject Bidder.DashBoard.Resources.SharedViewLocalizer _shardLocalizer
@{
    ViewData["Title"] = "Create";
}

<div class="card">
    <div class="card-header">
        <div class="card-title">
            <h2 class="font-weight-bolder">
                @_shardLocalizer.GetLocalizedString("CreatePremission")
            </h2>
        </div>
    </div>
    <div class="card-body">
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label>@_shardLocalizer.GetLocalizedString("PermissionArabicName")</label>
                        <input asp-for="NameAr" class="form-control" />
                        <span asp-validation-for="NameAr" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label> @_shardLocalizer.GetLocalizedString("PermissionEnglishName")</label>
                        <input asp-for="NameEn" class="form-control" />
                        <span asp-validation-for="NameEn" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>@_shardLocalizer.GetLocalizedString("PermissionController")</label>
                        <input asp-for="Controller" class="form-control" />
                        <span asp-validation-for="Controller" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>@_shardLocalizer.GetLocalizedString("PermissionAction")</label>
                        <input asp-for="Action" class="form-control" />
                        <span asp-validation-for="Action" class="text-danger"></span>
                    </div>

                    <div class="form-group col-md-12">
                        <input type="submit" class="btn btn-success" value="@_shardLocalizer.GetLocalizedString("BtnCreate")">
                        <a asp-action="Index" class="btn btn-primary">@_shardLocalizer.GetLocalizedString("BtnBack") </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
