@model IEnumerable<Bidder.Data.Entities.Permission>
@inject Bidder.DashBoard.Resources.SharedViewLocalizer _shardLocalizer
@{
    ViewData["Title"] = "Index";
}

<div class="widget-content widget-content-area col-12">
    <h4>@_shardLocalizer.GetLocalizedString("ManagePermission")</h4>
    <hr />
    <a asp-action="Create" class="btn btn-success">@_shardLocalizer.GetLocalizedString("BtnCreate")</a>
        <a href="/Permissions/GetAllControllerActionsUpdated" class="btn btn-primary">@_shardLocalizer.GetLocalizedString("CheckPermissions")</a>
        <hr />
        <div class="table-responsive mb-4 mt-4">
            <table id="html5-extension" class="table table-hover non-hover" style="width: 100%">
                <thead>
                    <tr>
                        <th>
                            @_shardLocalizer.GetLocalizedString("PermissionArabicName")
                            
                        </th>
                        <th>
                            @_shardLocalizer.GetLocalizedString("PermissionEnglishName")
                    
                        </th>
                        <th>
                            @_shardLocalizer.GetLocalizedString("PermissionController")
                            
                        </th>
                        <th>
                            @_shardLocalizer.GetLocalizedString("PermissionAction")
                            
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.NameAr)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NameEn)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Controller)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Action)
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm btn-block">
                                    <span class="icon-container">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-edit"><path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path><path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path></svg>
                                    </span>
                                    @_shardLocalizer.GetLocalizedString("BtnEdit")
                                </a>
                                <a class="btn btn-danger btn-sm btn-block" onclick="deleteRecord(@item.Id)">
                                    <span class="icon-container">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-trash-2"><polyline points="3 6 5 6 21 6"></polyline><path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path><line x1="10" y1="11" x2="10" y2="17"></line><line x1="14" y1="11" x2="14" y2="17"></line></svg>
                                    </span>
                                
                                    @_shardLocalizer.GetLocalizedString("BtnDelete")
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

@section Scripts
{
    <script>
        $(document).ready(function () {
            $('.table').DataTable();
        });
    </script>

}