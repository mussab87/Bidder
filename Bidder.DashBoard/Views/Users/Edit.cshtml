@model Bidder.DashBoard.ViewModels.UsersViewModels
@inject Bidder.DashBoard.Resources.SharedViewLocalizer _shardLocalizer

@{
    ViewData["Title"] = "Create";
}

<div class="widget-content widget-content-area col-9">
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="Email" />
        <div class="form-group">
            <label asp-for="Email" class="control-label"></label>
            <input asp-for="Email" class="form-control" disabled />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="NameInArabic" class="control-label"></label>
            <input asp-for="NameInArabic" class="form-control" />
            <span asp-validation-for="NameInArabic" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="NameInEnglish" class="control-label"></label>
            <input asp-for="NameInEnglish" class="form-control" />
            <span asp-validation-for="NameInEnglish" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password" class="control-label"></label>
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        @*<div class="form-group">
            <label asp-for="Phone" class="control-label"></label>
            <input asp-for="Phone" class="form-control" />
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>*@
        <div class="form-group form-check">
            <label class="form-check-label">
                <input class="form-check-input" asp-for="InActive" /> @Html.DisplayNameFor(model => model.InActive)
            </label>
        </div>

        <div class="form-group">
            <input type="submit" value="@_shardLocalizer.GetLocalizedString("BtnSave")" class="btn btn-success" /> <a asp-action="Index" class="btn btn-primary">@_shardLocalizer.GetLocalizedString("BtnBack")</a>
        </div>
    </form>
</div>

