@model IEnumerable<Bidder.DashBoard.ViewModels.UsersViewModels>
@inject Bidder.DashBoard.Resources.SharedViewLocalizer _shardLocalizer
@{
    ViewData["Title"] = "Index";
}



<div class="widget-content widget-content-area br-6">
    <a asp-action="Create" class="btn btn-success">@_shardLocalizer.GetLocalizedString("BtnCreate")</a>
    <hr />
    <div class="table-responsive mb-4 mt-4">
        <table id="html5-extension" class="table table-hover non-hover" style="width: 100%">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.NameInArabic)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.NameInEnglish)
                    </th>
                    @*<th>
                        @Html.DisplayNameFor(model => model.Phone)
                    </th>*@
                    <th>
                        @Html.DisplayNameFor(model => model.InActive)
                    </th>

                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NameInArabic)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NameInEnglish)
                    </td>
                    @*<td>
                        @Html.DisplayFor(modelItem => item.Phone)
                    </td>*@
                    <td>
                        @Html.DisplayFor(modelItem => item.InActive)
                    </td>

                    <td>


                        <div>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">
                                <span class="icon-container">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-edit"><path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path><path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path></svg>
                                </span>
                                @_shardLocalizer.GetLocalizedString("BtnEdit")
                            </a>
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>
